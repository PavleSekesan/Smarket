<resources>
        <style name="GreenButtonTheme">
            <item name="colorPrimary">@color/correct</item>
            <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        </style>
        <style name="RedButtonTheme">
            <item name="colorPrimary">@color/md_theme_light_error</item>
            <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        </style>

    <style name="Theme.Smarket.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.Smarket.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Smarket.TextViewError" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorError</item>
    </style>


    <style name="Widget.Smarket.TextViewPrimaryBackground" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
